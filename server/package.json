{
  "name": "frourio-app-server",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "build": "run-s build:* && webpack --mode=production",
    "build:prisma": "prisma generate",
    "build:frourio": "yarn migrate:dev && frourio",
    "dev": "yarn migrate:dev && run-p dev:*",
    "dev:frourio": "frourio --watch",
    "dev:prisma": "prisma generate --watch",
    "dev:server": "webpack --watch --mode=development",
    "license:check": "npx license-checker --production --onlyAllow 'MIT; Apache-2.0; Apache 2.0; ISC; BSD-3-Clause; BSD-2-Clause; 0BSD; CC-BY-4.0; CC0-1.0; MPL-2.0;'",
    "license:generate": "npx license-checker --json --customPath ../license-format.json > ./license.json",
    "migrate:dev": "prisma migrate dev --preview-feature",
    "migrate:init": "prisma migrate dev --name init --preview-feature",
    "migrate:reset": "prisma migrate reset --preview-feature",
    "migrate:seed": "yarn ts-node -r tsconfig-paths/register ./prisma/seeds/seeder.ts",
    "setup": "yarn install --network-timeout 1000000 && run-s setup:*",
    "setup:config": "npx shx cp -u .env.example ./.env && npx shx cp -u prisma/.env.example prisma/.env",
    "setup:db": "npx shx rm -f prisma/dev.db && yarn migrate:dev",
    "setup:heroku": "yarn install && yarn build:prisma && yarn build:frourio && webpack --mode=production && yarn migrate:seed",
    "start": "cross-env NODE_ENV=production node index.js"
  },
  "dependencies": {
    "@prisma/client": "^2.14.0",
    "bcryptjs": "^2.4.3",
    "class-validator": "^0.13.1",
    "date-fns": "^2.16.1",
    "dotenv": "^8.2.0",
    "fastify": "^3.10.1",
    "fastify-cors": "^5.1.0",
    "fastify-helmet": "^5.1.0",
    "fastify-jwt": "^2.3.0",
    "fastify-multipart": "^3.3.1",
    "fastify-static": "^3.4.0"
  },
  "devDependencies": {
    "@prisma/cli": "^2.14.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/faker": "^5.1.5",
    "@types/jest": "^26.0.20",
    "cross-env": "^7.0.3",
    "faker": "^5.1.0",
    "frourio": "^0.22.1",
    "nodemon-webpack-plugin": "^4.4.4",
    "npm-run-all": "^4.1.5",
    "ts-loader": "^8.0.14",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "typescript": "^4.1.3",
    "webpack": "^5.15.0",
    "webpack-cli": "^4.3.1",
    "webpack-node-externals": "^2.5.2"
  }
}
