{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": ".",
    "paths": {
      "$/*": [
        "./*"
      ]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "rootDir": ".",
    "strict": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": false
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "isolatedModules": false
    }
  }
}
