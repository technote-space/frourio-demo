datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Admin {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  icon      String?
  roles     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Guest {
  id           Int           @id @default(autoincrement())
  name         String
  nameKana     String
  zipCode      String
  address      String
  phone        String
  reservations Reservation[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model Room {
  id           Int           @id @default(autoincrement())
  name         String
  number       Int
  price        Int
  reservations Reservation[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model Reservation {
  id            Int     @id @default(autoincrement())
  guest         Guest   @relation(fields: [guestId], references: [id])
  guestId       Int
  guestName     String
  guestNameKana String
  guestZipCode  String
  guestAddress  String
  guestPhone    String
  room          Room    @relation(fields: [roomId], references: [id])
  roomId        Int
  roomName      String
  number        Int
  amount        Int
  checkin       DateTime
  checkout      DateTime
  status        String   @default("reserved")
  payment       Int?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
