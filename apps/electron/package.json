{
  "name": "@frourio-demo/electron",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "setup": "yarn install --prefer-offline --network-timeout 1000000 && run-s setup:*",
    "setup:config": "npx shx cp -u ../server/.env.example ./.env && npx shx cp -u ../server/prisma/.env.example ./prisma/.env && npx shx cp -u ../server/prisma/schema.prisma ./prisma/schema.prisma",
    "setup:db": "npx shx rm -f prisma/dev.db && prisma migrate dev --name init --preview-feature && yarn ts-node ./seeder.ts",
    "build": "run-s build:*",
    "build:license": "yarn license:generate && npx shx cp -u ./license.json ../admin/license.json",
    "build:client": "yarn --cwd ../.. build:admin",
    "build:electron": "webpack --progress --mode=production",
    "dev": "MODE=dev electron .",
    "start": "electron .",
    "dist": "electron-builder --publish never",
    "license:check": "npx license-checker --production --onlyAllow 'MIT; Apache-2.0; Apache 2.0; ISC; BSD-3-Clause; BSD-2-Clause; 0BSD; CC-BY-4.0; CC0-1.0; MPL-2.0;'",
    "license:generate": "run-s license:generate:*",
    "license:generate:prepare": "npx license-checker --json --customPath ../../license-format.json > ./client-license.json && npx license-checker --json --customPath ../../license-format.json --start ../admin > ./admin-license.json && npx license-checker --json --customPath ../../license-format.json --start ../server > ./server-license.json",
    "license:generate:merge": "jq -s add client-license.json admin-license.json server-license.json > license.json",
    "update": "npx npm-check-updates -u --timeout 100000"
  },
  "dependencies": {
    "@frourio-demo/types": "*",
    "@frourio-demo/utils": "*",
    "@frourio-demo/admin": "*",
    "@frourio-demo/server": "*",
    "@prisma/client": "^2.15.0",
    "bcryptjs": "^2.4.3",
    "class-validator": "^0.13.1",
    "date-fns": "^2.16.1",
    "dotenv": "^8.2.0",
    "fastify": "^3.11.0",
    "fastify-cors": "^5.2.0",
    "fastify-helmet": "^5.1.0",
    "fastify-jwt": "^2.3.0",
    "fastify-multipart": "^3.3.1",
    "fastify-static": "^3.4.0"
  },
  "devDependencies": {
    "@prisma/cli": "^2.15.0",
    "@types/webpack": "^4.41.26",
    "electron": "^11.2.1",
    "electron-builder": "^22.9.1",
    "npm-run-all": "^4.1.5",
    "ts-loader": "^8.0.14",
    "ts-node": "^9.1.1",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "typescript": "^4.1.3",
    "webpack": "^5.17.0",
    "webpack-cli": "^4.4.0",
    "webpack-node-externals": "^2.5.2"
  },
  "build": {
    "artifactName": "${productName}-${os}.${ext}",
    "directories": {
      "output": "dist",
      "buildResources": "."
    },
    "mac": {
      "icon": "./icons/icon.icns",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "icon": "./icons/icon.ico",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "extraResources": [
      {
        "from": "../../out",
        "to": "out"
      },
      {
        "from": "prisma",
        "to": "prisma",
        "filter": [
          ".env",
          "dev.db",
          "client/schema.prisma"
        ]
      },
      {
        "from": "public",
        "to": "public"
      },
      {
        "from": ".",
        "to": ".",
        "filter": [
          ".env"
        ]
      }
    ]
  },
  "productName": "FrourioElectronDemo"
}
