datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "./client"
  binaryTargets = ["native"]
}

model Admin {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  icon      String?
  roles     Role[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Role {
  role   String @id
  name   String
  admins Admin[]
}

model Guest {
  id           Int           @id @default(autoincrement())
  email        String        @unique
  name         String?
  nameKana     String?
  zipCode      String?
  address      String?
  phone        String?
  reservations Reservation[]
  auth0Sub     String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model Room {
  id           Int           @id @default(autoincrement())
  name         String
  number       Int
  price        Int
  reservations Reservation[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model Reservation {
  id            Int     @id @default(autoincrement())
  code          String
  guest         Guest?  @relation(fields: [guestId], references: [id])
  guestId       Int?
  guestEmail    String
  guestName     String
  guestNameKana String
  guestZipCode  String
  guestAddress  String
  guestPhone    String
  room          Room?   @relation(fields: [roomId], references: [id])
  roomId        Int?
  roomName      String
  number        Int
  amount        Int
  checkin       DateTime
  checkout      DateTime
  status        String   @default("reserved")
  payment       Int?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
