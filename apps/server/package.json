{
  "name": "@frourio-demo/server",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "yarn build:frourio && node --max_old_space_size=2048 --gc_interval=100 node_modules/webpack/bin/webpack.js --mode=production",
    "build:frourio": "yarn migrate:deploy && frourio",
    "build:prisma": "prisma generate --schema ./packages/infra/database/prisma/schema.prisma",
    "build:types": "yarn build:frourio",
    "dev": "run-p dev:*",
    "dev:frourio": "frourio --watch",
    "dev:prisma": "prisma generate --watch --schema ./packages/infra/database/prisma/schema.prisma",
    "dev:server": "webpack --watch --mode=development",
    "migrate:deploy": "prisma migrate deploy --schema ./packages/infra/database/prisma/schema.prisma",
    "migrate:dev": "prisma migrate dev --schema ./packages/infra/database/prisma/schema.prisma",
    "migrate:init": "npm_config_yes=true npx shx rm -fr packages/infra/database/prisma/migrations && yarn migrate:reset && prisma migrate dev --name init --schema ./packages/infra/database/prisma/schema.prisma",
    "migrate:reset": "prisma migrate reset --force --schema ./packages/infra/database/prisma/schema.prisma --skip-seed",
    "migrate:seed": "prisma db seed --preview-feature --schema ./packages/infra/database/prisma/schema.prisma",
    "prepare:ci": "echo 'DATABASE_URL=\"file:./dev.db\"\n' > packages/infra/database/prisma/.env && npm_config_yes=true npx replace 'mysql' 'sqlite' ./packages/infra/database/prisma/schema.prisma && yarn migrate:init",
    "setup": "yarn install --prefer-offline --network-timeout 1000000 && run-s setup:*",
    "setup:config": "npm_config_yes=true npx shx cp -u .env.example ./.env && if [ -z \"${CI}\" ]; then npx shx cp -u packages/infra/database/prisma/.env.example packages/infra/database/prisma/.env; else yarn prepare:ci; fi",
    "setup:db": "yarn migrate:reset && yarn migrate:dev",
    "start": "cross-env NODE_ENV=production node index.js",
    "update": "npm_config_yes=true npx npm-check-updates -u --timeout 100000",
    "log": "cat logs/system.log | yarn bunyan",
    "log:debug": "cat logs/system.log | yarn bunyan -l debug",
    "log:warn": "cat logs/system.log | yarn bunyan -l warn",
    "log:error": "cat logs/system.log | yarn bunyan -l error",
    "ts-node": "ts-node -r tsconfig-paths/register"
  },
  "dependencies": {
    "@frourio-demo/types": "*",
    "@frourio-demo/utils": "*",
    "@prisma/client": "^2.20.1",
    "@slack/webhook": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "bunyan": "^1.8.15",
    "class-validator": "^0.13.1",
    "date-fns": "^2.19.0",
    "dotenv": "^8.2.0",
    "fastify": "^3.14.1",
    "fastify-cors": "^5.2.0",
    "fastify-helmet": "^5.3.1",
    "fastify-jwt": "^2.4.0",
    "fastify-multipart": "^4.0.3",
    "fastify-static": "^4.0.1",
    "html-to-text": "^7.0.0",
    "node-cron": "^3.0.0",
    "node-fetch": "^2.6.1",
    "nodemailer": "^6.5.0",
    "qrcode": "^1.4.4",
    "reflect-metadata": "^0.1.13",
    "sanitize-html": "^2.3.3",
    "stripe": "^8.142.0",
    "tsyringe": "^4.5.0"
  },
  "devDependencies": {
    "@technote-space/material-table": "^2.3.7",
    "@technote-space/prisma-seeder-tools": "^0.3.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/bunyan": "^1.8.6",
    "@types/faker": "^5.5.0",
    "@types/html-to-text": "^6.0.0",
    "@types/jest": "^26.0.22",
    "@types/node-cron": "^2.0.3",
    "@types/node-fetch": "^2.5.9",
    "@types/nodemailer": "^6.4.1",
    "@types/qrcode": "^1.4.0",
    "@types/sanitize-html": "^1.27.2",
    "aspida": "^1.6.3",
    "cross-blob": "^2.0.0",
    "cross-env": "^7.0.3",
    "encoding": "^0.1.13",
    "faker": "^5.5.2",
    "frourio": "^0.24.1",
    "nodemon-webpack-plugin": "^4.5.2",
    "npm-run-all": "^4.1.5",
    "prisma": "^2.20.1",
    "raw-loader": "^4.0.2",
    "ts-loader": "^8.1.0",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "typescript": "^4.2.3",
    "webpack": "^5.30.0",
    "webpack-cli": "^4.6.0",
    "webpack-node-externals": "^2.5.2"
  },
  "engines": {
    "yarn": "1.x"
  }
}
