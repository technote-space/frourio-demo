{
  "name": "frourio-electron-demo",
  "version": "1.0.0",
  "description": "Demo application of Frourio (using Electron).",
  "keywords": [
    "frourio",
    "electron"
  ],
  "homepage": "https://github.com/technote-space/frourio-demo",
  "bugs": {
    "url": "https://github.com/technote-space/frourio-demo/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/technote-space/frourio-demo.git"
  },
  "license": "MIT",
  "author": {
    "name": "Technote",
    "email": "technote.space@gmail.com",
    "url": "https://technote.space"
  },
  "main": "index.js",
  "scripts": {
    "setup": "yarn install && run-s setup:*",
    "setup:config": "npx cpy-cli --no-overwrite --rename=.env ../../server/.env.example ./ && npx cpy-cli --no-overwrite --rename=.env ../../server/prisma/.env.example ./prisma && npx cpy-cli --no-overwrite ../../server/prisma/schema.prisma ./prisma",
    "setup:db": "npx del-cli prisma/dev.db && prisma migrate dev --name init --preview-feature && yarn ts-node ./seeder.ts",
    "build": "run-p build:*",
    "build:client": "yarn --cwd ../.. build:client",
    "build:electron": "webpack --progress --mode=production",
    "dev": "MODE=dev electron .",
    "start": "electron .",
    "dist": "run-p dist:*",
    "dist:mac": "electron-builder --mac --x64",
    "dist:win": "electron-builder --win --x64",
    "license:check": "npx license-checker --production --onlyAllow 'MIT; Apache-2.0; Apache 2.0; ISC; BSD-3-Clause; BSD-2-Clause; 0BSD; CC-BY-4.0; CC0-1.0; MPL-2.0;'"
  },
  "dependencies": {
    "@prisma/client": "^2.14.0",
    "bcryptjs": "^2.4.3",
    "class-validator": "^0.13.1",
    "date-fns": "^2.16.1",
    "dotenv": "^8.2.0",
    "fastify": "^3.10.1",
    "fastify-cors": "^5.1.0",
    "fastify-helmet": "^5.1.0",
    "fastify-jwt": "^2.3.0",
    "fastify-multipart": "^3.3.1",
    "fastify-static": "^3.4.0"
  },
  "devDependencies": {
    "@prisma/cli": "^2.14.0",
    "@types/webpack": "^4.41.26",
    "electron": "^11.2.0",
    "electron-builder": "^22.9.1",
    "npm-run-all": "^4.1.5",
    "ts-loader": "^8.0.14",
    "ts-node": "^9.1.1",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "typescript": "^4.1.3",
    "webpack": "^5.15.0",
    "webpack-cli": "^4.3.1",
    "webpack-node-externals": "^2.5.2"
  },
  "build": {
    "artifactName": "${productName}-${os}.${ext}",
    "directories": {
      "output": "dist",
      "buildResources": "."
    },
    "mac": {
      "icon": "./icons/icon.icns",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "icon": "./icons/icon.ico",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "extraResources": [
      {
        "from": "../../out",
        "to": "out"
      },
      {
        "from": "prisma",
        "to": "prisma",
        "filter": [
          ".env",
          "dev.db",
          "client/schema.prisma"
        ]
      },
      {
        "from": "public",
        "to": "public"
      },
      {
        "from": ".",
        "to": ".",
        "filter": [
          ".env"
        ]
      }
    ]
  },
  "productName": "FrourioElectronDemo"
}
